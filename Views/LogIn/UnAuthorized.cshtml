@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-lock-fill text-danger" style="font-size: 6rem;"></i>
            </div>

            <h1 class="display-1 fw-bold text-dark">403</h1>
            <h2 class="mb-3">Access Denied</h2>

            <p class="lead text-muted px-3">
                Oops! It looks like you don't have permission to access this page.
                <br class="d-none d-md-block">
                Please contact your administrator if you believe this is an error.
            </p>

            <div class="mt-4 d-grid gap-2 d-md-block">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-5 shadow-sm">
                    <i class="bi bi-house-door-fill me-2"></i> Go to Dashboard
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg px-5 shadow-sm">
                    <i class="bi bi-arrow-left me-2"></i> Go Back
                </button>
            </div>
        </div>
    </div>
</div>

