@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arihant</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-color: #0d6efd;
            --bg-light: #f8f9fa;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .error-container {
            background: #ffffff;
            padding: 3rem;
            border-radius: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
        }

            .error-container:hover {
                transform: translateY(-5px);
            }

        .display-1 {
            font-size: 8rem;
            font-weight: 900;
            letter-spacing: -5px;
            color: #212529;
            line-height: 1;
        }

        .icon-box {
            background: #fff5f5;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

        .btn-lg {
            padding: 0.8rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 0.75rem;
        }

        /* Desktop specific */
        @@media (min-width: 769px) {
            .error-container

        {
            max-width: 600px;
        }

        }

        /* Mobile adjustments */
        @@media (max-width: 768px) {
            body

        {
            padding: 20px;
        }

        .error-container {
            padding: 2rem 1.5rem;
        }

        .display-1 {
            font-size: 5rem;
        }

        .btn-group-mobile {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .btn-group-mobile .btn {
                width: 100% !important;
                margin: 0 !important;
            }

        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 d-flex justify-content-center">
                <div class="error-container text-center">

                    <div class="icon-box">
                        <i class="bi bi-shield-lock-fill text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h1 class="display-1">403</h1>
                    <h2 class="fw-bold text-secondary mb-3">Access Denied</h2>

                    <p class="text-muted mb-4">
                        We're sorry, but you do not have the required permissions
                        to view this page. If you think this is a mistake, please
                        contact your system administrator.
                    </p>

                    <div class="btn-group-mobile mt-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg shadow-sm me-md-2">
                            <i class="bi bi-house-door-fill me-2"></i> Dashboard
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left me-2"></i> Go Back
                        </button>
                    </div>

                    <div class="mt-5">
                        <small class="text-uppercase fw-bold text-spacing" style="letter-spacing: 2px; color: #ced4da;">
                            Arihant Systems
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>