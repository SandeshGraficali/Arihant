@model IEnumerable<Arihant.Models.Vender.VendorMasterVMView>
<head>
    <link href="~/css/datatables.css" rel="stylesheet" />
    <link href="~/css/allmin.css" rel="stylesheet" />
    <link href="~/css/toggle.min.css" rel="stylesheet" />
    <link href="~/css/sumoselect.css" rel="stylesheet" />
    <style>
        #vendorTable {
            width: 100% !important;
        }
        /* Optional: adjust padding for smaller screens */
        @@media (max-width: 768px) {
            .padding20 {
                padding: 10px;
            }

            .Heading {
                font-size: 14px;
            }
        }
    </style>
</head>

<body class="bg">
    <div class="wrapper paddingLR10">
        <div class="col-lg-12 padding10 Heading FontColor1 AllCaps" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="flex: 1;"></div>
            <div style="flex: 2; text-align: center;">
                <strong>Vendor List</strong>
            </div>
            <div style="flex: 1; text-align: right;">
                <a href="@Url.Action("Add_Vender", "Users_Master")" class="Button ButtonColor1 BorderRounded5" style="text-decoration:none; padding: 8px 15px; display: inline-flex; align-items: center; gap: 5px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                    </svg>
                    Add New Vendor
                </a>
            </div>
        </div>

        <div class="col-lg-12 floatleft BgColor1 Border1 BorderColor1 padding20 BorderRounded10 Shadow">
            <table id="vendorTable" class="TableStyle1">
                <thead class="BgColor1 FontColor1">
                    <tr>
                        <th>Vendor Name</th>
                        <th>GST No.</th>
                        <th>Email</th>
                        <th>Website</th>
                        <th>Mobile Number</th>
                        <th>IsActive</th>
                        <th style="width:100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VendorName</td>
                            <td>@item.GSTNo</td>
                            <td>@item.Email</td>
                            <td>@item.Website</td>
                            <td>@item.MobileNo</td>
                            <td>
                                <div class="status-toggle" style="cursor:pointer;" onclick="ToggleStatus(@item.VendorID, this)">
                                    @if (item.IsActive == "True")
                                    {
                                        <img src="~/images/4-active.png" id="img_@item.VendorID" data-status="1" style="width:55px;" alt="Active" />
                                    }
                                    else
                                    {
                                        <img src="~/images/4-inactive.png" id="img_@item.VendorID" data-status="0" style="width:55px;" alt="Inactive" />
                                    }
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; gap: 10px; align-items: center;">
                                    <a href="@Url.Action("Add_Vender", "Users_Master", new { id = item.VendorID })" title="Edit">
                                        <img src="~/images/edit.png" alt="Edit" style="width:20px; height:20px; cursor:pointer;" />
                                    </a>
                                    <a href="javascript:void(0)" onclick="DeleteVendor(@item.VendorID)" title="Delete">
                                        <img src="~/images/delete.png" alt="Delete" style="width:20px; height:20px; cursor:pointer;" />
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/datatables.js"></script>
<script src="~/js/sweetalert2.js"></script>

<script>
    $(document).ready(function () {
        $('#vendorTable').DataTable();
    });
    function DeleteVendor(vendorId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this delete!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("UpdateVendorStatusNew", "Users_Master")', // Reusing the same controller method
                    type: 'POST',
                    data: {
                        vendorId: vendorId,
                        status: 0, // Not relevant for delete, but keeps signature same
                        operation: "DELETE"
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire('Deleted!', 'Vendor has been deleted.', 'success')
                            .then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Server communication failed.', 'error');
                    }
                });
            }
        });
    }

        function ToggleStatus(vendorId, element) {
        // Get current status from the image data attribute
        var currentImg = $(element).find('img');
        var currentStatus = currentImg.attr('data-status'); // 1 for Active, 0 for Inactive
        var newStatus = (currentStatus == "1") ? 0 : 1;
        var statusText = (newStatus == 1) ? "Active" : "Inactive";

        Swal.fire({
            title: 'Are you sure?',
            text: "You want to set this vendor as " + statusText + "?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, change it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("UpdateVendorStatus", "Users_Master")',
                    type: 'POST',
                    data: { vendorId: vendorId, status: newStatus },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Updated!',
                                'Vendor status has been updated.',
                                'success'
                            ).then(() => {
                                location.reload(); // Reload page to reflect changes
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Communication with server failed.', 'error');
                    }
                });
            }
        });
    }
</script>