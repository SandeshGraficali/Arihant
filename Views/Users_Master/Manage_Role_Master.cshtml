@using Arihant.Models.Rights_Master

@{
    ViewData["Title"] = "Customer List";
}
@model List<DTO_MenuRight>
<link href="~/css/datatables.css" rel="stylesheet" />
<link href="~/css/allmin.css" rel="stylesheet" />
<link href="~/css/toggle.min.css" rel="stylesheet" />

<link href="~/css/sumoselect.css" rel="stylesheet" />
<style>
  
    :root {
        --primary-gold: #b08d57;
        --secondary-gold: #9a7b4a;
        --soft-bg: #f8f9fa;
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --danger: #e74c3c;
        --info: #3498db;
    }

    .master-container {
        width: 90%;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #edf2f7;
    }

   
    .master-header {
      
        padding: 20px 25px;
        color: #144379;
    }

        .master-header h2 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

    .table-role-master {
        width: 100%;
        border-collapse: collapse;
    }

        .table-role-master thead th {
            background-color: #fcfaf7;
            color: #144379;
            padding: 15px 25px;
            text-align: center;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #f1e9db;
        }

        .table-role-master tbody tr {
            transition: all 0.2s ease;
            border-bottom: 1px solid #f1f3f5;
        }

            .table-role-master tbody tr:hover {
                background-color: #fffefb;
            }

    .role-name-cell {
        padding: 20px 25px !important;
        vertical-align: top;
    }

    .role-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-dark);
        display: block;
        margin-bottom: 4px;
    }

    .role-count {
        font-size: 0.75rem;
        color: var(--info);
        background: #e1f0fa;
        padding: 2px 8px;
        border-radius: 10px;
        font-weight: 500;
    }


    .menu-assigned-cell {
        padding: 15px 25px !important;
    }

    .module-section {
        margin-bottom: 15px;
    }

    .module-header {
        color: #144379;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .module-header::after {
            content: "";
            flex-grow: 1;
            height: 1px;
            background: #f1e9db;
        }

    .badge-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .menu-badge {
        background-color: #f8f9fa;
        color: #555;
        border: 1px solid #e9ecef;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 400;
        transition: all 0.2s;
    }

        .menu-badge:hover {
            background-color: #fff;
            border-color: var(--primary-gold);
            color: var(--primary-gold);
            box-shadow: 0 2px 5px rgba(176, 141, 87, 0.1);
        }

 
    .action-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 35px;
        height: 35px;
        border-radius: 8px;
        transition: all 0.2s;
        text-decoration: none;
    }

    .edit-btn {
        background-color: #eef6ff;
    }

        .edit-btn:hover {
            background-color: #007bff;
        }

            .edit-btn:hover svg {
                fill: white;
            }

    .delete-btn {
        background-color: #fff5f5;
    }

        .delete-btn:hover {
            background-color: var(--danger);
        }

            .delete-btn:hover svg {
                fill: white;
            }
</style>



<div class="master-container">
    <div class="master-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Role & Permission Management</h2>
        <a href="@Url.Action("Role_Master", "Users_Master")" class="btn add-role-btn" style="    background-color: #144379;
    color: white;
    border-radius: 7px;
    width: 88px;
    margin-left: 20px;
    text-align: center;    height: 27px;">
           Add Role
        </a>
    </div>

    <table class="table-role-master">
        <thead>
            <tr>
                <th width="25%">Designation / Role</th>
                <th width="60%">Access Permissions</th>
                <th width="15%" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roleGroup in Model.GroupBy(r => new { r.RoleID, r.RoleName }))
            {
                <tr>
                    <td class="role-name-cell">
                        <span class="role-title">@roleGroup.Key.RoleName</span>
                        <span class="role-count">
                            <i class="fa fa-users"></i> @roleGroup.Count() Menus
                        </span>
                    </td>
                    <td class="menu-assigned-cell">
                        @foreach (var moduleGroup in roleGroup.GroupBy(m => m.Module))
                        {
                            <div class="module-section">
                                <span class="module-header">@moduleGroup.Key</span>
                                <div class="badge-container">
                                    @foreach (var menu in moduleGroup)
                                    {
                                        <span class="menu-badge">
                                            @menu.RightName
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        <div style="display: flex; justify-content: center; gap: 10px;">
                           @*  <img src="~/images/edit.png" />
                            <a href="@Url.Action("EditRole", "Users_Master", new { id = roleGroup.Key.RoleID })"
                               class="action-link edit-btn" title="Edit Role">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#007bff" viewBox="0 0 16 16">
                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                </svg>
                            </a> *@
                            <a href="@Url.Action("EditRole", "Users_Master", new { id = roleGroup.Key.RoleID })"
                               class="action-link edit-btn" title="Edit Role">
                                <img src="~/images/edit.png" alt="Edit Role" style="width:16px; height:16px;" />
                            </a>

                            <a href="javascript:void(0)" onclick="DeleteRole(@roleGroup.Key.RoleID)"
                               class="action-link delete-btn" title="Delete Role">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#dc3545" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/sumoselect.js"></script>
<script src="~/js/datatables.js"></script>
<script src="~/js/sweetalert2.js"></script>
<script src="~/js/validation.js"></script>
<script>

            function DeleteRole(roleId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to deactivate this role!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
              
                Swal.showLoading();

                $.ajax({
                    url: '@Url.Action("DeleteRole", "Users_Master")',
                    type: 'POST',
                    data: { id: roleId },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                response.message,
                                'success'
                            ).then(() => {
                                location.reload(); 
                            });
                        } else {
                            Swal.fire(
                                'Failed!',
                                response.message,
                                'error'
                            );
                        }
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Something went wrong with the server request.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
