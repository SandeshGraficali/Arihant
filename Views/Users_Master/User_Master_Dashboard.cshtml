<script>
        $.fn.dataTable.ext.errMode = 'none';

            function ActiveUser(userId) {
        $.ajax({
            url: '@Url.Action("ActiveUser", "Users_Master")',
            type: 'POST',
            data: { UserID: userId },
            success: function (response) {
                if (response.success) {
                    // Use a Toast instead of a full modal for better UX
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true
                    });

                    Toast.fire({
                        icon: 'success',
                        title: response.message
                    });

                   
                } else {
                    Swal.fire('Error', response.message, 'error');
                    
                    location.reload();
                }
            },
            error: function () {
                Swal.fire('Error', 'Server error occurred', 'error');
                location.reload();
            }
        });
    }

        function DeleteUser(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to delete User: " + id,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("DeleteUser", "Users_Master")',
                    type: 'POST',
                    data: { UserID: id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire('Deleted!', response.message, 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Server error occurred', 'error');
                    }
                });
            }
        });
    }

  function AddUserData() {
           let selectedIPs = $('#AssignedIP').val();
    const userData = {
        UserName: $('#UserName').val().trim(),
        UserID: $('#UserID').val().trim(),
        ContactNo: $('#ContactNo').val().trim(),
        EmailID: $('#EmailID').val().trim(),
        Password: $('#Password').val(),
                AssignedIP: selectedIPs
    };

    $.ajax({
        url: '@Url.Action("AddUser", "Users_Master")',
        type: 'POST',
        data: userData,
        success: function (response) {
            if (response.success) {
                $('#userModal').fadeOut();
                $('#userForm')[0].reset();
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: response.message,
                    timer: 2000
                }).then(() => {
                    location.reload();
                });
            } else {
                     $('#userModal').fadeOut();
                    $('#userForm')[0].reset();
                Swal.fire('Error', response.message, 'error');
            }
        },
        error: function () {
            Swal.fire('Error', 'Could not connect to the server.', 'error');
        }
    });
}

function UpdateUserData() {
    const userData = {
        UserID: $('#UserID').val(),
        UserName: $('#UserName').val().trim(),
        ContactNo: $('#ContactNo').val().trim(),
        EmailID: $('#EmailID').val().trim(),
        IPAddrID: $('#AssignedIP').val()
    };

    $.ajax({
        url: '@Url.Action("UpdateUser", "Users_Master")',
        type: 'POST',
        data: userData,
        success: function (response) {
            if (response.success) {
                $('#userModal').fadeOut();
                Swal.fire({
                    icon: 'success',
                    title: 'Updated!',
                    text: response.message,
                    timer: 2000
                }).then(() => {
                    location.reload();
                });
            } else {
                     $('#userModal').fadeOut();
                Swal.fire('Error', response.message, 'error');
            }
        },
        error: function () {
            Swal.fire('Error', 'Technical error occurred on the server.', 'error');
        }
    });
}

$(document).ready(function () {
    $('#AssignedIP').SumoSelect({
        csvDispCount: 3,
        selectAll: true,
        search: true,
        placeholder: 'Select IP Addresses'
    });

    var sumo = $('#AssignedIP')[0].sumo;

    $('#UserList').DataTable({
        paging: true,
        searching: true,
        responsive: true,
            language: {
            emptyTable: "No Users Found", 
            zeroRecords: "No matching records found"
        }
    });

    $('#btnOpenModal').on('click', function() {
        $('#userForm')[0].reset();
        $('#UserID').prop('readonly', false);
        $('#btnSaveUser').text('Add User');
        $('.modal-header-custom h3').text('Add New User');
        $('#passwordGroup').show(); 
        sumo.unSelectAll();
        $('.error-msg').hide();
        $('input, select').removeClass('error');
        $('#userModal').fadeIn();
    });

    $('#btnCloseX, #btnCancel').on('click', function() {
        $('#userModal').fadeOut(200);
    });

    window.EditUser = function(id, name, contact, email, ips) {
        $('#userForm')[0].reset();
        $('.modal-header-custom h3').text('Update User');
        $('#btnSaveUser').text('Update User');
        $('.error-msg').hide();
        $('input, select').removeClass('error');
        $('#passwordGroup').hide();
        $('#UserID').val(id).prop('readonly', true);
        $('#UserName').val(name);
        $('#ContactNo').val(contact);
        $('#EmailID').val(email);

        sumo.unSelectAll();
            if (ips && ips !== "Open Access") {
            let ipArray = ips.split(',').map(s => s.trim());
            ipArray.forEach(ipText => {
                $("#AssignedIP option").filter(function() {
                    return $(this).text().trim() === ipText;
                }).prop('selected', true);
            });
            sumo.reload();
        }
        $('#userModal').fadeIn(300);
    }

    $('#btnSaveUser').on('click', function() {
        let isValid = true;
        $('.error-msg').hide();
        $('input, select').removeClass('error');

        const nameRegex = /^[a-zA-Z\s]+$/;
        const userName = $('#UserName').val().trim();
        if (userName === "" || !nameRegex.test(userName)) {
            $('#err_UserName').text("Only letters and spaces allowed").show();
            $('#UserName').addClass('error');
            isValid = false;
        }

        if ($('#UserID').val().trim() === "") {
            $('#err_UserID').show();
            $('#UserID').addClass('error');
            isValid = false;
        }

        const contactNo = $('#ContactNo').val().trim();
        const contactRegex = /^\d{10}$/;
        if (!contactRegex.test(contactNo)) {
            $('#err_ContactNo').text("Must be 10 digits").show();
            $('#ContactNo').addClass('error');
            isValid = false;
        }


        const emailVal = $('#EmailID').val().trim();
                  if (!validateEmailField('#EmailID')) {
                          $('#err_EmailID').text("Enter Valid Email").show();
                    $('#EmailID').addClass('error');

                    
                    isValid = false;
                }


        let selectedIPs = $('#AssignedIP').val();
        if (!selectedIPs || selectedIPs.length === 0) {
            $('#err_AssignedIP').show();
            $('#AssignedIP').addClass('error');
            isValid = false;
        }

        if ($('#passwordGroup').is(':visible')) {

                const passVal = $('#Password').val();
                const strongPassRegex = /^(?=.*[a-zA-Z])(?=.*\d)(?=.*[!@@#$%^&*()_+{}\[\]:;<>,.?~\\/-]).{6,}$/;
                if (!strongPassRegex.test(passVal)) {
                    $('#err_Password').text("Must be 6+ chars with a letter, number, and special character (!@@#$).").show();
                    $('#Password').addClass('error');
                    isValid = false;
                }

                if (passVal !== $('#ConfirmPassword').val()) {
                    $('#err_ConfirmPassword').show();
                    $('#ConfirmPassword').addClass('error');
                    isValid = false;
                }
        }

        if (isValid) {
            if ($('#passwordGroup').is(':visible')) {
                AddUserData();
            } else {
                UpdateUserData();
            }
        }
    });
});
</script>
