@using Arihant.Models.User_Master
@{
    ViewData["Title"] = "User Master Dashboard";
}
@model List<IPViewModel_withIPS>

<link href="~/css/datatables.css" rel="stylesheet" />
<link href="~/css/allmin.css" rel="stylesheet" />
<link href="~/css/sumoselect.css" rel="stylesheet" />

<style>
    /* Table & Action Bar Styles */
    .table-wrapper {
        margin: 20px auto;
        max-width: 95%;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .modal-header-custom h3 {
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .action-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 15px;
    }

    .btn-add-user {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Modal Overlay & Content */
    .custom-modal-overlay {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.6);
        overflow-y: auto;
    }

    .custom-modal-content {
        background: #ffffff;
        margin: 3% auto;
        border-radius: 12px;
        width: 1000px; /* Increased width */
        max-width: 95%;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border: none;
        overflow: hidden;
    }

    .modal-header-custom {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        color: white;
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Form Layout Grid */
    .form-row-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 45px;
        padding: 25px;
    }


    .form-row-gridNEW {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        padding: 25px;
    }

    .form-group {
        margin-bottom: 10px;
    }

        .form-group input:focus {
            border-color: var(--secondary-blue);
            outline: none;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-group label {
            font-size: 0.85rem;
            color: #374151;
            margin-bottom: 6px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group input[type="date"],
        .form-group select {
            border: 1.5px solid var(--border-color);
            padding: 10px 12px;
            border-radius: 8px;
            transition: all 0.2s ease;
            background-color: #fff;
            color: #1f2937;
            font-size: 0.95rem;
        }

   

    
    /* Action Buttons */
    .btn-icon {
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }


        .btn {
    padding: 10px 24px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
}

.btn-success {
    background-color: var(--success-green) !important;
    color: white;
    box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.2);
}

.btn-success:hover {
    background-color: #059669 !important;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #e5e7eb;
    color: #4b5563;
}

.btn-secondary:hover {
    background-color: #d1d5db;
}

/* Error Messages */
.error-msg {
    color: var(--error-red);
    font-size: 11px;
    margin-top: 4px;
    font-weight: 500;
}

    :root {
        --primary-blue: #1e3a8a;
        --secondary-blue: #3b82f6;
        --success-green: #10b981;
        --error-red: #ef4444;
        --bg-light: #f9fafb;
        --border-color: #e5e7eb;
    }

    #userModal {
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
    }

    input[type="radio"], input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--secondary-blue);
        cursor: pointer;
    }

    #locationWrapper, .access-policy-row {
   
    }
</style>

<div id="userModal" class="custom-modal-overlay">
    <div class="custom-modal-content">
        <div class="modal-header-custom">
            <h3 style="margin:0;"><i class="fas fa-user-cog"></i> User Configuration</h3>
            <span id="btnCloseX" style="cursor:pointer; font-size:24px;">&times;</span>
        </div>

        <form id="userForm">
            <input type="hidden" id="UserID_Hidden" />

            <div class="form-row-gridNEW">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" id="UserName" name="UserName" placeholder="Full Name">
                    <span class="error-msg" id="err_UserName">User Name is required</span>
                </div>

                <div class="form-group">
                    <label>User ID</label>
                    <input type="text" id="UserName" name="UserName" placeholder="Full Name">
                    <span class="error-msg" id="err_UserName">User Name is required</span>
                </div>

                <div class="form-group">
                    <label>Contact Number</label>
                    <input type="text" id="ContactNo" name="ContactNo" placeholder="10 Digit Mobile">
                    <span class="error-msg" id="err_ContactNo">Invalid Number</span>
                </div>
                <div class="form-group">
                    <label>Email ID / Login ID</label>
                    <input type="text" id="EmailID" name="EmailID" placeholder="email@domain.com">
                    <span class="error-msg" id="err_EmailID">Valid Email required</span>
                </div>

                <div class="form-group">
                    <label>Password Expiry Date</label>
                    <input type="date" id="ExpiryDate" name="ExpiryDate">
                </div>
                <div class="form-group">
                    <label>Assigned Role</label>
                    <select id="RoleID" name="RoleID" multiple="multiple">
                        @if (ViewBag.RoleList != null)
                        {
                            foreach (var role in ViewBag.RoleList)
                            {
                                <option value="@role.RoleID">@role.RoleName</option>
                            }
                        }
                    </select>
                </div>

            </div>

            <div class="form-row-gridNEW" >
              
                <div class="form-group">
                    <label>Network Access</label>
                    <div style="padding-top: 8px; display: flex; gap: 10px;">
                        <label style="font-weight:normal;"><input type="radio" name="AccessType" value="Open" checked> Open</label>
                        <label style="font-weight:normal;"><input type="radio" name="AccessType" value="Office" id="radioOffice"> Office Based</label>
                    </div>
                </div>
                <div id="locationWrapper" style="display: none; padding: 15px 20px; ">
                    <div class="form-group">
                        <label>Select  Locations </label>
                        <select id="LocationID" name="LocationID" multiple="multiple">
                            @if (ViewBag.LocationList != null)
                            {
                                foreach (var loc in ViewBag.LocationList)
                                {
                                    <option value="@loc.LocationID">@loc.LocationName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>

           

            <div id="passwordGroup" class="form-row-grid">
                <div class="form-group">
                    <label>           Password</label>
                    <input type="password" id="Password" name="Password">
                    <span class="error-msg" id="err_Password">Password required</span>
                </div>
                
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword">
                    <span class="error-msg" id="err_ConfirmPassword">Mismatch</span>
                   
                </div>
                <div class="form-group">
                   
                </div>
            </div>

            <div style="padding: 15px 20px;">
                <div style="border-top: 1px dashed #ddd; padding-top: 10px;">
                    <label style="display: flex; align-items: center; gap: 10px; cursor: pointer; color: #d9534f;">
                        <input type="checkbox" id="chkDirectAccess"> <strong>Override with Direct Access Rights</strong>
                    </label>
                </div>

                <div id="rightsWrapper" style="display: none; margin-top: 15px; border: 1px solid #ddd; border-radius: 4px; max-height: 250px; overflow-y: auto;">
                    <partial name="~/Views/Shared/Menu/_MenuRightsPartial.cshtml" model="ViewBag.GroupedMenuRights" />
                </div>
            </div>

            <div style="text-align: right; padding: 15px 20px; background: #f8f9fa; border-radius: 0 0 8px 8px;">
                <button type="button" id="btnCancel" class="btn btn-secondary" style="margin-right:10px;">Cancel</button>
                <button type="button" id="btnSaveUser" class="btn btn-success" style="background: #28a745; width: 140px;">Add User</button>
            </div>
        </form>
    </div>
</div>

<div class="table-wrapper">
    <div class="action-bar">
        <button id="btnOpenModal" class="btn-add-user">
            <i class="fas fa-plus"></i> Add User
        </button>
    </div>
    <h2 class="text-center">User Master List</h2>
    <hr />

    <table id="UserList" class="TableStyle1" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>User Name</th>
                <th>User ID</th>
                <th>Contact No</th>
                <th>Email ID</th>
                <th>Assigned IP</th>
                <th>Actions</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@(i++)</td>
                        <td>@user.UserName</td>
                        <td>@user.UserID</td>
                        <td>@user.ContactNo</td>
                        <td>@user.EmailID</td>
                        <td>@user.AssignedIP</td>
                        <td class="text-center">
                            <button class="btn-icon" title="Edit" onclick="EditUser('@user.UserID', '@user.UserName', '@user.ContactNo', '@user.EmailID', '@user.AssignedIPs')">
                                <img src="~/images/edit.png" width="18" />
                            </button>
                            <button class="btn-icon" title="Delete" onclick="DeleteUser('@user.UserID')">
                                <img src="~/images/delete.png" width="18" />
                            </button>
                        </td>
                        <td class="text-center">
                            <img src="~/images/@(user.IsActive == "1" ? "4-active.png" : "4-inactive.png")"
                                 style="cursor:pointer" onclick="ActiveUser('@user.UserID')" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/sumoselect.js"></script>
<script src="~/js/datatables.js"></script>
<script src="~/js/sweetalert2.js"></script>

<script>
    $(document).ready(function () {
        // 1. Initialize Plugins
        $('#UserList').DataTable({ responsive: true });

        // Use global variables for SumoSelect instances to reload them easily
        $('#RoleID').SumoSelect({ search: true, selectAll: true, placeholder: 'Select Roles' });
        $('#LocationID').SumoSelect({ search: true, selectAll: true, placeholder: 'Select Locations' });

        // 2. Conditional Toggles
        $('input[name="AccessType"]').on('change', function() {
            if ($('#radioOffice').is(':checked')) {
                $('#locationWrapper').slideDown();
            } else {
                $('#locationWrapper').slideUp();
                $('#LocationID')[0].sumo.unSelectAll();
            }
        });

        $('#chkDirectAccess').on('change', function() {
            if ($(this).is(':checked')) {
                $('#rightsWrapper').slideDown();
            } else {
                $('#rightsWrapper').slideUp();
            }
        });

        // 3. Modal Controls
        $('#btnOpenModal').on('click', function() {
            $('#userForm')[0].reset();
            $('#UserID_Hidden').val('');
            $('#EmailID').prop('readonly', false).css('background', '#fff');
            $('#passwordGroup').show();
            $('#locationWrapper, #rightsWrapper').hide();
            $('#RoleID')[0].sumo.unSelectAll();
            $('#LocationID')[0].sumo.unSelectAll();
            $('.error-msg').hide();
            $('input').removeClass('error');
            $('#btnSaveUser').text('Add User');
            $('.modal-header-custom h3').text('Add New User');
            $('#userModal').fadeIn();
        });

        $('#btnCloseX, #btnCancel').on('click', function() {
            $('#userModal').fadeOut();
        });

        // 4. Save/Update Execution
        $('#btnSaveUser').on('click', function() {
            if (ValidateForm()) {
                const isUpdate = $('#UserID_Hidden').val() !== "";
                isUpdate ? UpdateUserData() : AddUserData();
            }
        });
    });

    // --- Validation Logic ---
    function ValidateForm() {
        let isValid = true;
        $('.error-msg').hide();
        $('input').removeClass('error');

        if ($('#UserName').val().trim() === "") { $('#err_UserName').show(); $('#UserName').addClass('error'); isValid = false; }
        if ($('#ContactNo').val().length !== 10) { $('#err_ContactNo').show(); $('#ContactNo').addClass('error'); isValid = false; }

        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        if (!emailRegex.test($('#EmailID').val())) { $('#err_EmailID').show(); $('#EmailID').addClass('error'); isValid = false; }

        if ($('#passwordGroup').is(':visible')) {
            if ($('#Password').val().length < 6) { $('#err_Password').show(); $('#Password').addClass('error'); isValid = false; }
            if ($('#Password').val() !== $('#ConfirmPassword').val()) { $('#err_ConfirmPassword').show(); $('#ConfirmPassword').addClass('error'); isValid = false; }
        }
        return isValid;
    }

    // --- AJAX Functions ---
    function AddUserData() {
        // Collect Menu IDs from partial view if checked
        let menuIds = [];
        if($('#chkDirectAccess').is(':checked')){
             $('#rightsWrapper input[type="checkbox"]:checked').each(function() { menuIds.push($(this).val()); });
        }

        const data = {
            UserName: $('#UserName').val(),
            EmailID: $('#EmailID').val(),
            ContactNo: $('#ContactNo').val(),
            Password: $('#Password').val(),
            ExpiryDate: $('#ExpiryDate').val(),
            Roles: $('#RoleID').val(),
            Locations: $('#LocationID').val(),
            MenuIDs: menuIds
        };

        $.post('@Url.Action("AddUser", "Users_Master")', data, function(res) {
            if(res.success) {
                Swal.fire('Success', res.message, 'success').then(() => location.reload());
            } else {
                Swal.fire('Error', res.message, 'error');
            }
        });
    }

    function EditUser(id, name, contact, email, ips) {
        $('#userForm')[0].reset();
        $('#UserID_Hidden').val(id);
        $('#UserName').val(name);
        $('#ContactNo').val(contact);
        $('#EmailID').val(email).prop('readonly', true).css('background', '#eee');
        $('#passwordGroup').hide();

        $('#btnSaveUser').text('Update User');
        $('.modal-header-custom h3').text('Update User Details');

        // Reset and reload SumoSelects for edit mode
        $('#RoleID')[0].sumo.unSelectAll();
        // Here you would typically fetch user details via AJAX and set RoleID/LocationID

        $('#userModal').fadeIn();
    }
</script>