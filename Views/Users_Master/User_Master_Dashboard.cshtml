    /* Add this to your <style> tag */
    .SumoSelect {
        width: 100%;
    }

        .SumoSelect > .caption {
            border-radius: 4px;
            height: 38px;
            padding-top: 8px;
        }

        .SumoSelect > .optWrapper > .options li.opt label {
            margin-bottom: 0; /* Fixes checkbox alignment */
        }

    /* Modal Overlay */
    .custom-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 9999;
    }

    /* Modal Content Box */
    .custom-modal-content {
        background: #fff;
        width: 450px;
        margin: 50px auto;
        padding: 0;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        position: relative;
        font-family: Arial, sans-serif;
    }

    .modal-header-custom {
        background: #0b50a6;
        color: white;
        padding: 15px;
        border-radius: 8px 8px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .form-group {
        margin: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input, .form-group select {
            width: 93%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    /* SVG Icon Button Styles */
    .btn-icon {
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
        transition: transform 0.2s;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .error-msg {
        color: red;
        font-size: 11px;
        display: none;
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 42px;
        height: 22px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 22px;
    }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

    .toggle-switch input:checked + .toggle-slider {
        background-color: #28a745;
    }

        .toggle-switch input:checked + .toggle-slider:before {
            transform: translateX(20px);
        }


</style>
<div id="userModal" class="custom-modal-overlay">
    <div class="custom-modal-content">
        <div class="modal-header-custom">
            <h3 style="margin:0;">Add New User</h3>
            <span id="btnCloseX" style="cursor:pointer; font-size:24px;">&times;</span>
        </div>

        <form id="userForm">
            <div class="form-group">
                <label>User Name</label>
                <input type="text" id="UserName" name="UserName">
                <span class="error-msg" id="err_UserName">User Name is required</span>
            </div>
            <div class="form-group">
                <label>User ID</label>
                <input type="text" id="UserID" name="UserID">
                <span class="error-msg" id="err_UserID">User ID is required</span>
            </div>
            <div class="form-group">
                <label>Contact Number</label>
                <input type="text" id="ContactNo" name="ContactNo">
                <span class="error-msg" id="err_ContactNo">Enter valid contact number</span>
            </div>
            <div class="form-group">
                <label>Email ID</label>
                <input type="text" id="EmailID" name="EmailID">
                <span class="error-msg" id="err_EmailID">Enter a valid email address</span>
            </div>

            <div class="form-group">
                <label>Assigned IP</label>
                <select id="AssignedIP" name="IPAddrID" class="form-control multiselect-sumo" multiple="multiple">
                    @if (ViewBag.IPList != null)
                    {
                        foreach (var ip in ViewBag.IPList)
                        {
                            <option value="@ip.IPAddrID">@ip.IPAddress</option>
                        }
                    }
                </select>
                <span class="error-msg" id="err_AssignedIP">Please select at least one IP</span>
            </div>

            <div id="passwordGroup">
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="Password" name="Password">
                    <span class="error-msg" id="err_Password">Password (min 6 chars) required</span>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword">
                    <span class="error-msg" id="err_ConfirmPassword">Passwords do not match</span>
                </div>
            </div>

            <div style="text-align: right; margin-top: 30px;margin-bottom:20px">
                <button type="button" id="btnCancel" class="btn btn-secondary">Cancel</button>
                <button style="margin-bottom: 20px;
                  margin-right: 20px;" type="button" id="btnSaveUser" class="btn btn-success">
                    Add User
                </button>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="table-wrapper">
        <div class="action-bar">
            <button id="btnOpenModal" class="btn-add-user">
                <i class="fas fa-plus"></i> Add User
            </button>
        </div>
        <h2 class="text-center">User List</h2>
        <hr />

        <table id="UserList" class="TableStyle1" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User Name</th>
                    <th>User ID</th>
                    <th>Contact No</th>
                    <th>Email ID</th>
                    <th>Assigned IP</th>
                    <th>Actions</th>
                    <th>IsActive</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    if (Model != null && Model.Count > 0)
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td style="text-align:center;">@i</td>
                                <td>@user.UserName</td>
                                <td>@user.UserID</td>
                                <td>@user.ContactNo</td>
                                <td>@user.EmailID</td>
                                <td>@user.AssignedIP</td>
                                <td style="text-align:center;">
                                    <button class="btn-icon edit-btn" title="Edit"
                                            onclick="EditUser('@user.UserID', '@user.UserName', '@user.ContactNo', '@user.EmailID', '@user.AssignedIPs')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                    </button>
                                    <button class="btn-icon delete-btn" title="Delete" onclick="DeleteUser('@user.UserID')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </button>
                                </td>
                                <td style="text-align:center;">
                                    <label class="toggle-switch">
                                        <input type="checkbox"
                                               @(user.IsActive == "1" ? "checked" : "")
                                               onchange="ActiveUser('@user.UserID')" />
                                        <span class="toggle-slider"></span>
                                    </label>
                                </td>

                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No Users Found</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/jquery-3.7.1.js"></script>
