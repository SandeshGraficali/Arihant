@using Arihant.Models.User_Master
@{
    ViewData["Title"] = "User Master Dashboard";
}
@model List<IPViewModel_withIPS>

<link href="~/css/datatables.css" rel="stylesheet" />
<link href="~/css/allmin.css" rel="stylesheet" />
<link href="~/css/sumoselect.css" rel="stylesheet" />

<style>
    /* Table & Action Bar Styles */
    .table-wrapper {
        margin: 20px auto;
        max-width: 95%;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .modal-header-custom h3 {
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .action-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 15px;
    }

    .btn-add-user {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Modal Overlay & Content */
    .custom-modal-overlay {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.6);
        overflow-y: auto;
    }

    .custom-modal-content {
        background: #ffffff;
        margin: 3% auto;
        border-radius: 12px;
        width: 1000px; /* Increased width */
        max-width: 95%;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border: none;
        overflow: hidden;
    }

    .modal-header-custom {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        color: white;
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Form Layout Grid */
    .form-row-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 45px;
        padding: 25px;
    }


    .form-row-gridNEW {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        padding: 25px;
    }

    .form-group {
        margin-bottom: 10px;
    }

        .form-group input:focus {
            border-color: var(--secondary-blue);
            outline: none;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-group label {
            font-size: 0.85rem;
            color: #374151;
            margin-bottom: 6px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .form-group input[type="text"],
        .form-group input[type="number"],
        .form-group input[type="password"],
        .form-group input[type="date"],
        .form-group select {
            border: 1.5px solid var(--border-color);
            padding: 10px 12px;
            border-radius: 8px;
            transition: all 0.2s ease;
            background-color: #fff;
            color: #1f2937;
            font-size: 0.95rem;
        }




    /* Action Buttons */
    .btn-icon {
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }


    .btn {
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
        cursor: pointer;
        border: none;
    }

    .btn-success {
        background-color: var(--success-green) !important;
        color: white;
        box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.2);
    }

        .btn-success:hover {
            background-color: #059669 !important;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #e5e7eb;
        color: #4b5563;
    }

        .btn-secondary:hover {
            background-color: #d1d5db;
        }

    /* Error Messages */
    .error-msg {
        color: var(--error-red);
        font-size: 11px;
        margin-top: 4px;
        font-weight: 500;
    }

    :root {
        --primary-blue: #1e3a8a;
        --secondary-blue: #3b82f6;
        --success-green: #10b981;
        --error-red: #ef4444;
        --bg-light: #f9fafb;
        --border-color: #e5e7eb;
    }

    #userModal {
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
    }

    input[type="radio"], input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--secondary-blue);
        cursor: pointer;
    }

    #locationWrapper, .access-policy-row {
    }

    #UserList th,
    #UserList td {
        text-align: center;
        vertical-align: middle; /* Keeps content centered vertically too */
    }

</style>

<div id="userModal" class="custom-modal-overlay">
    <div class="custom-modal-content">
        <div class="modal-header-custom">
            <h3 style="margin:0;"><i class="fas fa-user-cog"></i> User Configuration</h3>
            <span id="btnCloseX" style="cursor:pointer; font-size:24px;">&times;</span>
        </div>

        <form id="userForm">
            <input type="hidden" id="UserID_Hidden" />

            <div class="form-row-gridNEW">
                <div class="form-group">
                    <label>User Name</label> <span style="color:red;margin-left:3px;">*</span>
                    <input type="text" id="UserName" name="UserName" placeholder="Full Name">
                    <br />
                    <span class="error-msg" id="err_UserName">User Name is required</span>
                </div>

                <div class="form-group"> 
                    <label>User ID  <span style="color:red;margin-left:3px;">*</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="text" id="UserID" name="UserID" placeholder="Full Name">
                    <br />
                    <span class="error-msg" id="err_UserID">User Name is required</span>
                </div>

                <div class="form-group">
                    <label>Contact Number</label> <span style="color:red;margin-left:3px;">*</span>
                    <input type="number" id="ContactNo" name="ContactNo" placeholder="10 Digit Mobile">
                    <br />
                    <span class="error-msg" id="err_ContactNo">Invalid Number</span>
                </div>
                <div class="form-group">
                    <label>Email ID <span style="color:red;margin-left:3px;">*</span>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="text" id="EmailID" name="EmailID" placeholder="email@domain.com">
                    <br />
                    <span class="error-msg" id="err_EmailID">Valid Email required</span>
                </div>

                <div class="form-group">
                    <label>Password Expiry Date</label> <span style="color:red;margin-left:3px;">*</span>
                    <input type="number" id="ExpiryDate" name="ExpiryDate">
                </div>
                <div class="form-group">
                    <label>Assigned Role</label> 
                    <select id="RoleID" name="RoleID" multiple="multiple">
                        @if (ViewBag.RoleList != null)
                        {
                            foreach (var role in ViewBag.RoleList)
                            {
                                <option value="@role.RoleID">@role.RoleName</option>
                            }
                        }
                    </select>
                </div>

            </div>

            <div class="form-row-gridNEW">

                <div class="form-group">
                    <label>Network Access</label> <span style="color:red;margin-left:3px;">*</span>
                    <div style="padding-top: 8px; display: flex; gap: 10px;">
                        <label style="font-weight:normal;"><input type="radio" name="AccessType" value="Open" checked> Open</label>
                        <label style="font-weight:normal;"><input type="radio" name="AccessType" value="Office" id="radioOffice"> Office / Factory</label>
                    </div>
                </div>
                <div id="locationWrapper" style="display: none; padding: 15px 20px; ">
                    <div class="form-group">
                        <label>Select  Locations </label> <span style="color:red;margin-left:3px;">*</span>
                        <select id="LocationID" name="LocationID" multiple="multiple">
                            @if (ViewBag.LocationList != null)
                            {
                                foreach (var loc in ViewBag.LocationList)
                                {
                                    <option value="@loc.LocationID">@loc.LocationName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>



            <div id="passwordGroup" class="form-row-grid">
                <div class="form-group">
                    <label>           Password</label> <span style="color:red;margin-left:3px;">*</span>
                    <input type="password" id="Password" name="Password">
                    <br />
                    <span class="error-msg" id="err_Password">Password required</span>
                </div>

                <div class="form-group">
                    <label>Confirm Password</label> <span style="color:red;margin-left:3px;">*</span>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword">
                    <br />

                    <span class="error-msg" id="err_ConfirmPassword">Mismatch</span>

                </div>
                <div class="form-group">
                </div>
            </div>

            <div style="padding: 15px 20px;">
                <div style="border-top: 1px dashed #ddd; padding-top: 10px;">
                    <label style="display: flex; align-items: center; gap: 10px; cursor: pointer; color: #d9534f;">
                        <input type="checkbox" id="chkDirectAccess"> <strong>Override with Direct Access Rights</strong>
                    </label>
                </div>

                <div id="rightsWrapper" style="display: none; margin-top: 15px; border: 1px solid #ddd; border-radius: 4px; max-height: 650px; overflow-y: auto;">
                    <partial name="~/Views/Shared/Menu/_MenuRightsPartial.cshtml" model="ViewBag.GroupedMenuRights" />
                </div>
            </div>

            <div style="text-align: right; padding: 15px 20px; background: #f8f9fa; border-radius: 0 0 8px 8px;">
                <button type="button" id="btnCancel" class="btn btn-secondary" style="margin-right:10px;">Cancel</button>
                <button type="button" id="btnSaveUser" class="btn btn-success" style="background: #28a745; width: 140px;">Add User</button>
            </div>
        </form>
    </div>
</div>

<div class="table-wrapper">
    <div class="action-bar">
        <button id="btnOpenModal" class="btn-add-user">
            <i class="fas fa-plus"></i> Add User
        </button>
    </div>
    <h2 class="text-center">User Master List</h2>
    <hr />

    <table id="UserList" class="TableStyle1 text-center" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>User Name</th>
                <th>Contact No</th>
                <th>Email ID</th>
               
                <th>Role</th>
                <th>Location Access</th>
                <th>Reset Password</th>
                <th>Active</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@(i++)</td>
                        <td>@user.UserName</td>
                        <td>@user.ContactNo</td>
                        <td>@user.EmailID</td>
                       
                        <td>@user.AssignedRoles</td>
                        <td>@user.AssignedLocations</td>
                        <td class="text-center">
                            <button class="btn-icon" title="Reset" onclick="ResetUserPassword('@user.ID')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#e67e22" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 2v6h-6"></path>
                                    <path d="M3 12a9 9 0 0 1 15-6.7L21 8"></path>
                                    <rect x="3" width="18" height="11" y="11" rx="2" ry="2"></rect>
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                </svg>
                            </button>
                        </td>
                        <td class="text-center">
                            <img src="~/images/@(user.IsActive == "1" ? "4-active.png" : "4-inactive.png")"
                                 style="cursor:pointer" onclick="ActiveUser('@user.ID')" />
                        </td>
                        <td class="text-center">
                            <button class="btn-icon" title="Edit" onclick="EditUser('@user.ID')">
                                <img src="~/images/edit.png" width="18" />
                            </button>
                            <button class="btn-icon" title="Delete" onclick="DeleteUser('@user.ID')">
                                <img src="~/images/delete.png" width="18" />
                            </button>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/sumoselect.js"></script>
<script src="~/js/datatables.js"></script>
<script src="~/js/sweetalert2.js"></script>

<script>
        $(document).ready(function () {

            $('#UserList').DataTable({ responsive: true });


            $('#RoleID').SumoSelect({ search: true, selectAll: true, placeholder: 'Select Roles' });
            $('#LocationID').SumoSelect({ search: true, selectAll: true, placeholder: 'Select Locations' });


            $('input[name="AccessType"]').on('change', function() {
                if ($('#radioOffice').is(':checked')) {
                    $('#locationWrapper').slideDown();
                } else {
                    $('#locationWrapper').slideUp();
                    $('#LocationID')[0].sumo.unSelectAll();
                }
            });

            $('#chkDirectAccess').on('change', function() {
                if ($(this).is(':checked')) {
                    $('#rightsWrapper').slideDown();
                } else {
                    $('#rightsWrapper').slideUp();
                }
            });


            $('#btnOpenModal').on('click', function() {
                $('#userForm')[0].reset();
                $('#UserID_Hidden').val('');
                $('#EmailID').prop('readonly', false).css('background', '#fff');
                $('#passwordGroup').show();
                $('#locationWrapper, #rightsWrapper').hide();
                $('#RoleID')[0].sumo.unSelectAll();
                $('#LocationID')[0].sumo.unSelectAll();
                $('.error-msg').hide();
                $('input').removeClass('error');
                $('#btnSaveUser').text('Add User');
                $('.modal-header-custom h3').text('Add New User');
                $('#userModal').fadeIn();
            });

            $('#btnCloseX, #btnCancel').on('click', function() {
                $('#userModal').fadeOut();
            });


            $('#btnSaveUser').on('click', function() {
                if (ValidateForm()) {
                    const isUpdate = $('#UserID_Hidden').val() !== "";
                    isUpdate ? UpdateUserData() : AddUserData();
                }
            });
        });


            function showModalAlert(message) {
        Swal.fire({
            title: 'Validation Error',
            text: message,
            icon: 'error',
            confirmButtonColor: '#3085d6',
           
            target: document.getElementById('userModal')
        });
    }


     function ValidateForm() {
        let isValid = true;

        $(".error-msg").hide();
        $(".form-control, input, select").removeClass("is-invalid");


        const userName = $("#UserName").val().trim();
        if (userName === "") {
            $("#err_UserName").text("User Name is required").show();
            $("#UserName").addClass("is-invalid");
            isValid = false;
        }


          const userID = $("#UserID").val().trim();
        if (userID === "") {
            $("#err_UserID").text(" UserID is required").show();
            $("#UserID").addClass("is-invalid");
            isValid = false;
        }


            const contactNo = $("#ContactNo").val().trim();
            const intRegex = /^\d{10}$/;
            $("#err_ContactNo").hide();
            $("#ContactNo").removeClass("is-invalid");

            if (contactNo === "") {
                showModalAlert("Contact Number is required.");
                $("#ContactNo").addClass("is-invalid");
                $("#err_ContactNo").text("Contact Number is required").show();
                isValid = false;
            }
            else if (!intRegex.test(contactNo)) {
                showModalAlert("Please enter a valid 10-digit numeric contact number.");
                $("#ContactNo").addClass("is-invalid");
                $("#err_ContactNo").text("Must be exactly 10 digits").show();
                isValid = false;
            }


        const emailID = $("#EmailID").val().trim();
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        if (emailID === "" || !emailRegex.test(emailID)) {
            $("#err_EmailID").text("A valid email address is required").show();
            $("#EmailID").addClass("is-invalid");
            isValid = false;
        }


          const expiryDays = $("#ExpiryDate").val().trim();
    if (expiryDays === "" || parseInt(expiryDays) <= 0) {
        showModalAlert("Please enter a valid number of days for password expiry.");
        $("#ExpiryDate").addClass("is-invalid");
        $("#err_ExpiryDate").text("Days are required (Minimum 1)").show();
        isValid = false;
    }

   

        const accessType = $("input[name='AccessType']:checked").val();
        if (accessType === "Office") {
            const selectedLocations = $("#LocationID").val();
            if (!selectedLocations || selectedLocations.length === 0) {
               showModalAlert("Please select at least one Location for Office-based access.");
                isValid = false;
            }
        }


        const isDirectAccess = $("#chkDirectAccess").is(':checked');
        if (isDirectAccess) {
            const selectedMenus = $("input[name='selectedMenus']:checked").length;
            if (selectedMenus === 0) {
               showModalAlert("You have enabled Direct Access. Please select at least one menu right.");
                isValid = false;
            }
        }

                    let isUpdate = $('#UserID_Hidden').val() !== "";

                        if(isUpdate)
                        {

                        }
                        else{

                            const password = $("#Password").val();
                            const confirmPassword = $("#ConfirmPassword").val();

                            const alphanumericRegex = /^(?=.*[a-zA-Z])(?=.*\d).+$/;


                            if (password === "") {
                                $("#err_Password").text("Password is required").show();
                                $("#Password").addClass("is-invalid");
                                isValid = false;
                            }
                            else if (!alphanumericRegex.test(password)) {
                                $("#err_Password").text("Password must be alphanumeric (contain letters and numbers)").show();
                                $("#Password").addClass("is-invalid");
                                isValid = false;
                            }


                            if (confirmPassword === "") {
                                $("#err_ConfirmPassword").text("Please confirm your password").show();
                                $("#ConfirmPassword").addClass("is-invalid");
                                isValid = false;
                            }
                            else if (password !== confirmPassword) {
                                $("#err_ConfirmPassword").text("Passwords do not match").show();
                                $("#ConfirmPassword").addClass("is-invalid");
                                isValid = false;
                            }

                        }

        return isValid;
    }


        function AddUserData() {

                   var data = {
                        UserID: $("#UserID").val(),
                    UserName: $("#UserName").val(),
                    ContactNo: $("#ContactNo").val(),
                    EmailID: $("#EmailID").val(),
                    ExpiryDate: $("#ExpiryDate").val(),
                    Password: $("#Password").val(),
                    AccessType: $("input[name='AccessType']:checked").val(),
                    IsDirectAccess: $("#chkDirectAccess").is(':checked'),
                    RoleIDs: $("#RoleID").val(),
                    LocationIDs: $("#LocationID").val()
                };

                var selectedMenus = [];
                $("input[name='selectedMenus']:checked").each(function () {
                    selectedMenus.push($(this).val());
                });
                    data.SelectedMenuRights = selectedMenus;


                        if (!data.UserName || !data.EmailID) {
                    alert("Please fill in required fields.");
                    return;
                }

                $.post('@Url.Action("AddUser", "Users_Master")', data, function(res) {
                    if (res.success) {
                      
                        Swal.fire({
                            title: 'Success',
                            text: res.message,
                            icon: 'success',
                            target: document.getElementById('userModal'),
                            customClass: {
                                container: 'high-z-index' 
                            }
                        }).then(() => {
                            $('#userModal').fadeOut();
                            location.reload();
                        });
                    } else {
                    
                        Swal.fire({
                            title: 'Error',
                            text: res.message,
                            icon: 'error',
                            target: document.getElementById('userModal')
                        });
                    }
                });
        }

           function EditUser(id) {

            $('#userForm')[0].reset();
            $('.error-msg').hide();
            $('#UserID_Hidden').val(id);

            $('#btnSaveUser').text('Update User');
            $('.modal-header-custom h3').text('Update User Details');

            $.get('@Url.Action("GetUserDetails", "Users_Master")', { id: id }, function (res) {
                if (res.success) {
                    const d = res.data;

                    $("#UserName").val(d.userName);
                                 $("#UserID").val(d.userID);
                    $("#ContactNo").val(d.contactNo);
                    $("#EmailID").val(d.emailID).prop('readonly', true).css('background', '#f1f1f1');
                    $("#ExpiryDate").val(d.expiryDate);
                    $('#passwordGroup').hide();
                    $(`input[name='AccessType'][value='${d.accessType}']`).prop('checked', true).trigger('change');
                    $('#RoleID')[0].sumo.unSelectAll();
                    if (d.roleIDs) {
                        d.roleIDs.forEach(val => $('#RoleID')[0].sumo.selectItem(val.toString()));
                    }

                    if (d.accessType === "Office" && d.locationIDs) {
                        $('#LocationID')[0].sumo.unSelectAll();
                        d.locationIDs.forEach(val => $('#LocationID')[0].sumo.selectItem(val.toString()));
                        $('#locationWrapper').show();
                    }
                    $('#chkDirectAccess').prop('checked', d.isDirectAccess).trigger('change');
                    $("input[name='selectedMenus']").prop('checked', false);
                    if (d.selectedMenus) {
                        d.selectedMenus.forEach(menuID => {
                            $(`input[name='selectedMenus'][value='${menuID}']`).prop('checked', true);
                        });
                    }


                    if (typeof refreshRightsCheckboxes === "function") {
    refreshRightsCheckboxes();
}

                        $("#btnSaveUser").text("Update User");
                    $('#userModal').fadeIn();
                } else {
                    Swal.fire('Error', 'Could not fetch user data', 'error');
                }
            });
        }


            function UpdateUserData() {
             
            var userObj = {
                UserID: $('#UserID').val(),
                UserName: $('#UserName').val().trim(),
                ContactNo: $('#ContactNo').val().trim(),
                EmailID: $('#EmailID').val().trim(),
                ExpiryDate: $('#ExpiryDate').val(),
                AccessType: $('input[name="AccessType"]:checked').val(),
                IsDirectAccess: $('#chkDirectAccess').is(':checked'),
                RoleIDs: $('#RoleID').val() || [],
                LocationIDs: $('#LocationID').val() || []
            };


            var selectedMenus = [];
            if (userObj.IsDirectAccess) {
                $("input[name='selectedMenus']:checked").each(function () {
                    selectedMenus.push(parseInt($(this).val()));
                });
            }
            userObj.SelectedMenuRights = selectedMenus;


            $.ajax({
                    url: '@Url.Action("UpdateUser", "Users_Master")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(userObj),

                success: function (response) {
                    if (response.success) {
                            $('#UserID_Hidden').val('');
                         Swal.fire({
                        title: 'Success',
                        text: 'User updated successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK',
                      
                        target: document.getElementById('userModal')
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.reload();
                        }
                    });
                    } else {
                        alert("Update Failed: " + response.message);

                    }
                },
                error: function (err) {
                    console.error(err);
                    alert("An error occurred while updating the user.");

                }
            });
        }


            function ActiveUser(userId) {
     
        var $imgElement = $(event.target);

        $.ajax({
            url: '@Url.Action("ActiveUser", "Users_Master")',
            type: 'POST',
            data: { UserID: userId },
            success: function (response) {
                if (response.success) {
               
                    if (response.isActive) {
                        $imgElement.attr("src", "/images/4-active.png");
                    } else {
                        $imgElement.attr("src", "/images/4-inactive.png");
                    }

                  
                    console.log(response.message);
                } else {
                    alert("Error: " + response.message);
                }
            },
            error: function () {
                alert("Failed to connect to the server.");
            }
        });
    }



        function DeleteUser(userId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to delete this user? This action can be undone by admin.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                
                $.ajax({
                    url: '@Url.Action("DeleteUser", "Users_Master")',
                    type: 'POST',
                    data: { UserID: userId },
                    success: function (response) {
