@model IEnumerable<Arihant.Models.Unit.UnitMaster>
<head>
    <link href="~/css/datatables.css" rel="stylesheet" />
    <link href="~/css/allmin.css" rel="stylesheet" />
    <link href="~/css/toggle.min.css" rel="stylesheet" />
    <link href="~/css/sumoselect.css" rel="stylesheet" />
    <style>
        #vendorTable {
            width: 100% !important;
        }

        @@media (max-width: 768px) {
            .padding20 {
                padding: 10px;
            }

            .Heading {
                font-size: 14px;
            }
        }
    </style>
</head>

<body class="bg">
    <div class="wrapper paddingLR10">
        <div class="col-lg-12 padding10 Heading FontColor1 AllCaps" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="flex: 1;"></div>
            <div style="flex: 2; text-align: center;">
                <strong>Unit List</strong>
            </div>
            <div style="flex: 1; text-align: right;">
                <a href="@Url.Action("AddUnit", "Users_Master")" class="Button ButtonColor1 BorderRounded5" style="text-decoration:none; padding: 8px 15px; display: inline-flex; align-items: center; gap: 5px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                    </svg>
                    Add New Unit
                </a>
            </div>
        </div>

        <div class="col-lg-12 floatleft BgColor1 Border1 BorderColor1 padding20 BorderRounded10 Shadow">
            <table id="UnitTable" class="TableStyle1">
                <thead class="BgColor1 FontColor1">
                    <tr>
                        <th>Company Name</th>
                        <th>Factory Name.</th>
                        <th>Unit Code</th>
                        
                        <th>IsActive</th>
                        <th style="width:100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.companyName</td>
                                <td>@item.factoryName</td>
                                <td>@item.unitCode</td>
                            
                                <td>
                                    <div class="status-toggle" style="cursor:pointer;" onclick="ToggleStatus(@item.UnitID, this)">
                                        @if (item.IsActive == "1")
                                        {
                                            <img src="~/images/4-active.png" id="img_@item.UnitID" data-status="1" style="width:55px;" alt="Active" />
                                        }
                                        else
                                        {
                                            <img src="~/images/4-inactive.png" id="img_@item.UnitID" data-status="0" style="width:55px;" alt="Inactive" />
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div style="display: flex; gap: 10px; align-items: center;">
                                        <a href="@Url.Action("AddUnit", "Users_Master", new { id = item.UnitID })" title="Edit">
                                            <img src="~/images/edit.png" alt="Edit" style="width:20px; height:20px; cursor:pointer;" />
                                        </a>
                                        <a href="javascript:void(0)" onclick="DeleteVendor(@item.UnitID)" title="Delete">
                                            <img src="~/images/delete.png" alt="Delete" style="width:20px; height:20px; cursor:pointer;" />
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/datatables.js"></script>
<script src="~/js/sweetalert2.js"></script>

<script>
    $(document).ready(function () {
        $('#UnitTable').DataTable();
    });
    function DeleteVendor(unitId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this delete!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("DeleteUnitStatus", "Users_Master")',
                    type: 'POST',
                    data: {
                        UinitId: unitId,
                        status: 0,
                        operation: "DELETE"
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire('Deleted!', 'Vendor has been deleted.', 'success')
                            .then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Server communication failed.', 'error');
                    }
                });
            }
        });
    }

        function ToggleStatus(unitId, element) {

        var currentImg = $(element).find('img');
        var currentStatus = currentImg.attr('data-status');
        var newStatus = (currentStatus == "1") ? 0 : 1;
        var statusText = (newStatus == 1) ? "Active" : "Inactive";

        Swal.fire({
            title: 'Are you sure?',
            text: "You want to set this vendor as " + statusText + "?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, change it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("UpdateUnitStatus", "Users_Master")',
                    type: 'POST',
                    data: { unitId: unitId, status: newStatus },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Updated!',
                                'Vendor status has been updated.',
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Communication with server failed.', 'error');
                    }
                });
            }
        });
    }
</script>