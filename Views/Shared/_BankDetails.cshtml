@model string

<div class="col-lg-12 floatleft BgColor1 Border1 BorderColor1 padding20 BorderRounded10 Shadow marginB20" style="margin:10px;">
    <div class="NormalTextBig FontColor1"><strong> Bank Details</strong></div>
    <hr />
    <div class="col-lg-4 floatleft padding10"><label>Bank Name <span style="color:red">*</span></label><input type="text" name="BankName" class="TextBox col-lg-12 BorderRounded5"></div>
    <div class="col-lg-4 floatleft padding10"><label>Account No . <span style="color:red">*</span></label><input type="text" name="AccountNo" class="TextBox col-lg-12 BorderRounded5"></div>
    <div class="col-lg-4 floatleft padding10"><label>IFSC Code <span style="color:red">*</span></label><input type="text" name="IFSCCode" class="TextBox col-lg-12 BorderRounded5"></div>

    <div class="clear"></div>
    <div class="col-lg-12 no-padding">
        <div class="col-lg-6 floatleft padding5"><label>Bank Address/Branch <span style="color:red">*</span></label><input type="text" name="BankAddress" class="TextBox col-lg-12 BorderRounded5" /></div>

    </div>
    <div class="col-lg-12 no-padding">
        <div class="col-lg-6 floatleft padding5"><label>Landmark</label><input type="text" id="B_Landmark" class="TextBox col-lg-12 BorderRounded5"></div>
        <div class="col-lg-6 floatleft padding5"><label>Pincode <span style="color:red">*</span></label> <input type="text" id="B_Pincode" class="TextBox col-lg-12 BorderRounded5"></div>
    </div>
    <div class="col-lg-12 no-padding">

        <div class="col-lg-6 floatleft padding5">
            <label>State</label> <span style="color:red">*</span>

            <select id ="@(Model)_State" class="TextBox col-lg-12 BorderRounded5" onchange="OnStateChange(this.value, '@(Model)')">
                <option value="">-- Select State --</option>
            </select>
        </div>
        <div class="col-lg-6 floatleft padding5">
            <label>City</label> <span style="color:red">*</span>

            <select id="@(Model)_City" class="TextBox col-lg-12 BorderRounded5">
                <option value="">-- Select City --</option>
            </select>
        </div>



    </div>
</div>