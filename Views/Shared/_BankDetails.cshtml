
@model string
<div class="col-lg-4 floatleft padding10">
    <label>Bank Name <span style="color:red">*</span></label>
    <input type="text" name="BankName" class="TextBox col-lg-12 BorderRounded5">
</div>
<div class="col-lg-4 floatleft padding10">
    <label>Account Holder Name <span style="color:red">*</span></label>
    <input type="text" name="AccountHolderName" class="TextBox col-lg-12 BorderRounded5">
</div>
<div class="col-lg-4 floatleft padding10">
    <label>Account Type <span style="color:red">*</span></label>
    <select name="AccountType" class="TextBox col-lg-12 BorderRounded5">
        <option value="">-- Select --</option>
        <option value="Savings">Savings</option>
        <option value="Current">Current</option>
    </select>
</div>
<div class="col-lg-4 floatleft padding10">
    <label>Account No. <span style="color:red">*</span></label>
    <input type="number" name="AccountNo" class="TextBox col-lg-12 BorderRounded5">
</div>
<div class="col-lg-4 floatleft padding10">
    <label>IFSC Code <span style="color:red">*</span></label>
    <input type="text" name="IFSCCode" class="TextBox col-lg-12 BorderRounded5">
</div>
