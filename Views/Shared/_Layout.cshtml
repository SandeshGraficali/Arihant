@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using Arihant.Models.Menu  

@inject IHttpContextAccessor HttpContextAccessor

@{
	var session = HttpContextAccessor.HttpContext.Session;
	var userName = session.GetString("UserName");
	var menuData = Context.Session.GetString("UserMenu");
	List<MenuViewModel> menus = !string.IsNullOrEmpty(menuData)
		? JsonConvert.DeserializeObject<List<MenuViewModel>>(menuData)
		: new List<MenuViewModel>();
	var groupedModules = menus.GroupBy(m => m.Module).ToList();
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<meta name="viewport" content="width=device-width,initial-scale=1">

	<title>Arihant</title>
	<meta name="keywords" content="">
	<meta name="Description" content="">
	<meta http-equiv='cache-control' content='no-cache'>
	<meta http-equiv='expires' content='0'>
	<meta http-equiv='pragma' content='no-cache'>
	<link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
    <link href="~/css/programstyle.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" type="text/css" href="~/css/ionicon.min.css">
    <script src="~/js/jquery-2.1.1.min.js"></script>
	<script type="text/javascript" src="~/js/jquery.matchheight.js"></script>
	<script defer src="~/js/script.js"></script>
	<script type="text/javascript">
		jQuery(function ($) {
			$('.matchheight').matchHeight();
		});
	</script>

</head>
<body class="bg">

	<header class="header">
		<div class="wrapper paddingLR10">
			<div style="display: flex; align-items: flex-end">
               
				<div class="paddingTB10 floatleft"><img src="~/images/logo.png" class="innerlogo" alt="" /> </div>
				<div class="padding5 floatleft Heading FontColor1"><strong>Arihant Gold Plast Pvt. Ltd.</strong></div>
			</div>
			<div class="headerTM ">

				<div class="floatright padding10 FontColor1">
					<div class="clear padding20 col-xxs-displaynone"></div>
					Welcome <strong>@userName</strong> | <a href="@Url.Action("Logout", "LogIn")" class="JustLinks FontColor1">
						Logout
					</a>
				</div>
			</div>
		</div>

		<div class="desk-menu">
			<nav class="box-menu">
				<div class="menu-container">
					<div class="menu-head">


						<span class="padding10">

							<i class="icon-user"></i>
						</span>

					</div>
					<div class="menu-header-container">
						

						<ul id="cd-primary-nav" class="menu">
							@foreach (var module in groupedModules)
							{
								<li class="menu-item menu-item-has-children">
									<a href="#">@module.Key</a>
									<ul class="sub-menu">
										@foreach (var item in module)
										{
											var subItems = module.Where(x => x.ParentMenuID == item.MenuID && x.MenuID != item.MenuID).ToList();

											if (subItems.Any())
											{
												<li class="menu-item menu-item-has-children">
													<a href="#">@item.RightName</a>
													<ul class="sub-menu">
														@foreach (var sub in subItems)
														{
															<li><a href="@sub.UrlPage">@sub.RightName</a></li>
														}
													</ul>
												</li>
											}
											else if (item.ParentMenuID == item.MenuID)
											{
												
												<li class="menu-item">
													<a href="@item.UrlPage">@item.RightName</a>
												</li>
											}
										}
									</ul>
								</li>
							}
						</ul>
					</div>

				</div>
				<div class="hamburger-menu">
					<div class="bar"></div>
				</div>
			</nav>
		</div>



		<div class="clear"></div>
	</header>

	<main role="main" class="pb-3">
		@RenderBody()
	</main>
    <script src="~/js/jquery-3.7.1.js"></script>
    <script src="~/js/sweetalert2.js"></script>
	<script>
		$(document).ready(function() {
			const urlParams = new URLSearchParams(window.location.search);
			if (urlParams.has('unauthorized')) {
				Swal.fire({
					icon: 'error',
					title: 'Access Denied',
					text: 'You do not have permission for that module.',
					confirmButtonColor: '#d33'
				});
				window.history.replaceState({}, document.title, window.location.pathname);
			}

			$(document).ajaxError(function (event, jqXHR) {
				if (jqXHR.status === 403) {
					Swal.fire({
						icon: 'error',
						title: 'Action Prohibited',
						text: 'Your current rights do not allow this action.',
						confirmButtonColor: '#d33'
					});
				}
			});
		});
		const { fetch: originalFetch } = window;
		window.fetch = async (...args) => {
			const response = await originalFetch(...args);
			if (response.status === 403) {
				Swal.fire({
					icon: 'error',
					title: 'Restricted Access',
					text: 'You do not have the required permissions.',
					confirmButtonColor: '#d33'
				});
			}
			return response;
		};

	</script>
</body>

</html>

